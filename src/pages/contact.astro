---
// src/pages/contact.astro
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/contactForm.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact | Pro Home Buyers - Let's Talk About Your Property</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        
        * {
            font-family: 'Inter', sans-serif;
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }

        .hero-pattern {
            background-image: 
                linear-gradient(to right, #f1f5f9 1px, transparent 1px),
                linear-gradient(to bottom, #f1f5f9 1px, transparent 1px);
            background-size: 40px 40px;
        }

        .success-message {
            display: none;
        }

        .success-message.show {
            display: block;
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body class="bg-slate-50">
    <!-- Navigation -->
    <Navigation />

    <!-- Hero Section with Contact Info -->
    <section class="relative bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100 hero-pattern py-20 md:py-28">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <h1 class="text-5xl md:text-6xl font-bold text-slate-900 mb-6">
                        Let's <span class="gradient-text">Talk.</span>
                    </h1>
                    <p class="text-xl text-slate-600 mb-10 leading-relaxed">
                        Have a question or want to request your offer? Our local team is here to helpâ€”no pressure, no obligation.
                    </p>

                    <!-- Contact Info Cards -->
                    <div class="space-y-4">
                        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm text-slate-500 font-medium">Call or Text</p>
                                    <a href="tel:7182887300" class="text-xl font-bold text-slate-900 hover:text-blue-600">(718) 288-7300</a>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition">
                            <div class="flex items-center space-x-4">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <p class="text-sm text-slate-500 font-medium">Email Us</p>
                                    <a href="mailto:info@prohomebuyersny.com" class="text-xl font-bold text-slate-900 hover:text-blue-600">info@prohomebuyersny.com</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 flex items-center space-x-3 text-sm text-slate-600">
                        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span>We typically respond within 1 hour during business hours</span>
                    </div>
                </div>

                <div class="relative">
                    <img src="https://images.unsplash.com/photo-1556761175-4b46a572b786?w=800&h=600&fit=crop" 
                         alt="Contact Pro Home Buyers" 
                         class="rounded-2xl shadow-2xl"/>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-20 bg-white">
        <div class="max-w-4xl mx-auto px-6">
            <div class="text-center mb-12">
                <span class="text-blue-600 font-semibold text-sm uppercase tracking-wide mb-4 block">Get in Touch</span>
                <h2 class="text-4xl font-bold text-slate-900 mb-4">
                    Send Us a Message
                </h2>
                <p class="text-xl text-slate-600">
                    Fill out the form below and we'll get back to you as soon as possible.
                </p>
            </div>

            <!-- Success Message -->
            <div id="successMessage" class="success-message mb-8 bg-green-50 border-l-4 border-green-500 rounded-lg p-6">
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-green-900 mb-1">Message Sent Successfully!</h3>
                        <p class="text-green-700">We've received your message and will call or text you shortly.</p>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <ContactForm/>
        </div>
    </section>

    <!-- Office Location Section -->
    <section class="py-20 bg-slate-50">
        <div class="max-w-7xl mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-4xl font-bold text-slate-900 mb-4">
                    Our Base of Operations
                </h2>
                <p class="text-xl text-slate-600">
                    Proudly serving homeowners across Nassau and Suffolk County
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
                <!-- Office Info Card -->
                <div class="bg-white rounded-2xl p-8 shadow-lg">
                    <div class="flex items-start space-x-4 mb-6">
                        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl font-bold text-slate-900 mb-2">Headquarters</h3>
                            <p class="text-slate-600 text-lg mb-2">Manhasset, NY</p>
                            <p class="text-sm text-slate-500">(Virtual Office in Albany)</p>
                        </div>
                    </div>

                    <div class="border-t border-slate-200 pt-6 space-y-4">
                        <div class="flex items-center space-x-3">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <p class="font-semibold text-slate-900">Business Hours</p>
                                <p class="text-slate-600">Monday - Friday: 8:00 AM - 7:00 PM</p>
                                <p class="text-slate-600">Saturday: 9:00 AM - 5:00 PM</p>
                                <p class="text-slate-600">Sunday: By Appointment</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 p-4 bg-blue-50 rounded-xl">
                        <p class="text-sm text-blue-900">
                            <strong>Service Area:</strong> We serve homeowners across Nassau County and Suffolk County, including Manhasset, Great Neck, Port Washington, Roslyn, Glen Cove, Garden City, and surrounding areas.
                        </p>
                    </div>
                </div>

                <!-- Map Placeholder -->
                <div class="bg-white rounded-2xl overflow-hidden shadow-lg">
                    <div class="relative h-full min-h-[400px]">
                        <img 
                            src="https://images.unsplash.com/photo-1524813686514-a57563d77965?w=800&h=600&fit=crop" 
                            alt="Long Island Map" 
                            class="w-full h-full object-cover"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-blue-900/70 to-transparent flex items-end p-8">
                            <div class="text-white">
                                <h4 class="text-2xl font-bold mb-2">Serving All of Long Island</h4>
                                <p class="text-blue-100">Nassau County â€¢ Suffolk County â€¢ Queens</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Footer Section -->
    <section class="py-20 bg-gradient-to-br from-blue-600 to-blue-800 relative overflow-hidden">
        <div class="absolute inset-0 hero-pattern opacity-10"></div>
        <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
                Prefer to Talk Right Away?
            </h2>
            <p class="text-xl text-blue-100 mb-10">
                Our team is ready to discuss your property and answer any questions you have.
            </p>
            <a 
                href="tel:7182887300" 
                class="inline-flex items-center bg-white text-blue-600 px-10 py-5 rounded-xl hover:bg-blue-50 transition font-bold text-xl shadow-2xl"
            >
                <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                Call (718) 288-7300
            </a>
            <p class="text-blue-200 mt-6 text-sm">
                Available Monday - Saturday, 8 AM - 7 PM EST
            </p>
        </div>
    </section>

<!-- Footer -->
    <Footer />

    <!-- Scroll to Top Button -->
    <button id="scrollToTop" 
            class="fixed bottom-8 right-8 bg-blue-600 text-white w-12 h-12 rounded-full shadow-lg hover:bg-blue-700 transition opacity-0 pointer-events-none"
            onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
        <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
    </button>

    <script is:inline>
        // Scroll to top button visibility
        const scrollBtn = document.getElementById('scrollToTop');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                scrollBtn.classList.remove('opacity-0', 'pointer-events-none');
                scrollBtn.classList.add('opacity-100');
            } else {
                scrollBtn.classList.add('opacity-0', 'pointer-events-none');
                scrollBtn.classList.remove('opacity-100');
            }
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>