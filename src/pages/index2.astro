    @font-face {
      font-family: 'Recoleta';
      src: url('https://cdn.prod.website-files.com/6230bfc886c8142108c44052/6230bfc886c8145497c4408e_font.woff2') format('woff2');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary: #704D47;
      --secondary: #F5EEEC;
      --accent: #B98E63;
      --text-dark: #836B64;
      --text-light: #A39D9C;
      --bg-light: #F2EAE9;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background-color: var(--bg-light);
      color: var(--primary);
      overflow-x: hidden;
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    body::-webkit-scrollbar {
      display: none;
    }

    .recoleta {
      font-family: 'Recoleta', serif;
    }

    /* Navigation */
    .navbar {
      position: fixed;
      top: 0;
      width: 100%;
      padding: 1.5rem 5%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(242, 234, 233, 0.95);
      backdrop-filter: blur(10px);
      z-index: 1000;
      transition: all 0.3s ease;
    }

    .navbar.scrolled {
      box-shadow: 0 2px 20px rgba(112, 77, 71, 0.1);
    }

    .logo-wrapper img {
      height: 40px;
      width: auto;
    }

    .nav-menu {
      display: flex;
      gap: 2rem;
      align-items: center;
    }

    .nav-menu a {
      color: var(--primary);
      text-decoration: none;
      font-size: 0.95rem;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .nav-menu a:hover {
      color: var(--accent);
    }

    .book-now-modal, .call-now-modal {
      background: var(--primary);
      color: white;
      padding: 0.75rem 1.75rem;
      border-radius: 25px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .book-now-modal:hover, .call-now-modal:hover {
      background: var(--accent);
      transform: translateY(-2px);
    }

    /* Hero Section */
    .hero-section {
      min-height: 100vh;
      padding-top: 8rem;
      display: flex;
      align-items: center;
    }

    .container-large {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 5%;
    }

    .hero-content-wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .hero-left {
      animation: fadeInUp 0.8s ease;
    }

    .hero-top-text {
      color: var(--text-light);
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    .h1 {
      font-family: 'Recoleta', serif;
      font-size: 4rem;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      color: var(--primary);
    }

    .hero-bottom-text {
      font-size: 1.1rem;
      color: var(--text-dark);
      line-height: 1.8;
      margin-bottom: 2rem;
    }

    .appointment_wrapper {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }

    /* Marquee Images */
    .hero-right {
      position: relative;
      height: 600px;
      overflow: hidden;
    }

    .marquee {
      position: relative;
      height: 100%;
      overflow: hidden;
    }

    .track-vertical {
      position: absolute;
      animation: marquee-vertical 40s linear infinite;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    @keyframes marquee-vertical {
      from { transform: translateY(0); }
      to { transform: translateY(-50%); }
    }

    .icon-container img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(112, 77, 71, 0.1);
    }

    /* Transparency Section */
    .section {
      padding: 6rem 5%;
      text-align: center;
    }

    .h2 {
      font-family: 'Recoleta', serif;
      font-size: 2.8rem;
      color: var(--primary);
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .subtext-large {
      font-size: 1.2rem;
      color: var(--text-dark);
      margin-bottom: 3rem;
    }

    /* Card Grid */
    .c-cards-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .c-card {
      background: white;
      padding: 2.5rem;
      border-radius: 20px;
      box-shadow: 0 5px 20px rgba(112, 77, 71, 0.08);
      transition: all 0.4s ease;
      opacity: 0;
      transform: translateY(30px);
    }

    .c-card.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .c-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(112, 77, 71, 0.15);
    }

    .transparency-lottie {
      width: 80px;
      height: 80px;
      margin: 0 auto 1.5rem;
    }

    .card-subtitle {
      font-family: 'Recoleta', serif;
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    .transparency-text {
      color: var(--text-dark);
      line-height: 1.7;
      text-align: left;
    }

    /* Gallery Section */
    .gallery-section {
      padding: 6rem 5%;
      background: white;
    }

    .title-wrapper-gallery {
      text-align: center;
      margin-bottom: 1rem;
    }

    .subtext-wrapper {
      text-align: center;
      margin-bottom: 3rem;
    }

    .swiper-container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
    }

    .gallery-image {
      width: 100%;
      height: 600px;
      object-fit: cover;
      border-radius: 20px;
    }

    .slider-button-left, .slider-button-right {
      width: 50px;
      height: 50px;
      background: var(--primary);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 10;
    }

    .slider-button-left { left: 20px; }
    .slider-button-right { right: 20px; }

    .slider-button-left:hover, .slider-button-right:hover {
      background: var(--accent);
      transform: translateY(-50%) scale(1.1);
    }

    .slider-button-left::after {
      content: '←';
      color: white;
      font-size: 24px;
    }

    .slider-button-right::after {
      content: '→';
      color: white;
      font-size: 24px;
    }

    /* Amenities Section */
    .amenities-wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 6rem 5%;
    }

    .amenities-title {
      font-family: 'Recoleta', serif;
      font-size: 2.5rem;
      line-height: 1.3;
      margin-bottom: 1.5rem;
    }

    .amenities-right {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .amenities-inner-wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 0;
    }

    .amenities-icon {
      width: 24px;
      height: 24px;
    }

    .amenities-text {
      color: var(--primary);
      font-size: 0.95rem;
    }

    /* FAQ Section */
    .faq-section {
      padding: 6rem 5%;
      max-width: 1200px;
      margin: 0 auto;
    }

    .faq-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }

    .faq-question-wrap {
      margin-bottom: 1.5rem;
    }

    .faq-question-bar {
      background: white;
      padding: 1.5rem;
      border-radius: 10px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s ease;
    }

    .faq-question-bar:hover {
      background: var(--secondary);
    }

    .question-title {
      font-weight: 600;
      color: var(--primary);
    }

    .faq-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
      padding: 0 1.5rem;
    }

    .faq-question-wrap.active .faq-content {
      max-height: 500px;
      padding: 1.5rem;
    }

    .faq-question-wrap.active .image-9 {
      transform: rotate(45deg);
    }

    .image-9 {
      width: 24px;
      height: 24px;
      transition: transform 0.3s ease;
    }

    /* Testimonials Section */
    .testimonial-section {
      padding: 6rem 5%;
      background: white;
    }

    .testimonial-content {
      background: var(--secondary);
      padding: 3rem;
      border-radius: 20px;
      text-align: center;
      min-height: 300px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .quotes {
      width: 40px;
      margin: 0 auto 1.5rem;
    }

    .testimonial-p {
      font-size: 1.1rem;
      line-height: 1.8;
      color: var(--primary);
      margin-bottom: 1.5rem;
    }

    .testimonial-client {
      font-weight: 600;
      color: var(--primary);
    }

    .category-tab {
      padding: 0.75rem 1.5rem;
      border-radius: 25px;
      background: var(--secondary);
      margin: 0 0.5rem 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .category-tab:hover, .category-tab.w--current {
      background: var(--accent);
      color: white;
    }

    /* Footer */
    footer {
      background: var(--primary);
      padding: 4rem 5% 2rem;
      color: white;
    }

    .footer-middle {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      margin: 3rem 0;
    }

    .footer-title {
      font-family: 'Recoleta', serif;
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .footer-link {
      color: var(--secondary);
      text-decoration: none;
      display: block;
      margin-bottom: 0.75rem;
      transition: color 0.3s ease;
    }

    .footer-link:hover {
      color: var(--accent);
    }

    .footer-divider {
      height: 1px;
      background: rgba(245, 238, 236, 0.2);
      margin: 1.5rem 0;
    }

    .footer-bottom {
      text-align: center;
      padding-top: 2rem;
      border-top: 1px solid rgba(245, 238, 236, 0.2);
      color: var(--secondary);
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero-content-wrapper {
        grid-template-columns: 1fr;
      }

      .h1 {
        font-size: 2.5rem;
      }

      .nav-menu {
        display: none;
      }

      .amenities-wrapper {
        grid-template-columns: 1fr;
      }

      .faq-grid {
        grid-template-columns: 1fr;
      }

      .footer-middle {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
