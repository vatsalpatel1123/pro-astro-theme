    // Initialize Swiper for Testimonials
    const testimonialSwiper = new Swiper('#testimonial-swiper', {
      slidesPerView: 1,
      spaceBetween: 30,
      loop: true,
      navigation: {
        nextEl: '#testimonial-swiper .slider-button-right',
        prevEl: '#testimonial-swiper .slider-button-left',
      },
      autoplay: {
        delay: 6000,
        disableOnInteraction: false,
      },
    });

    // Scroll Animation Observer
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 100);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-in, .c-card').forEach((el) => {
      observer.observe(el);
    });

    // Header scroll effect
    const navbar = document.querySelector('.navbar');
    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 100) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });

    // FAQ Accordion
    document.querySelectorAll('.faq-question-bar').forEach(button => {
      button.addEventListener('click', () => {
        const faqItem = button.parentElement;
        const isActive = faqItem.classList.contains('active');
        
        document.querySelectorAll('.faq-question-wrap').forEach(item => {
          item.classList.remove('active');
        });
        
        if (!isActive) {
          faqItem.classList.add('active');
        }
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Book Now Modal (simplified - in production would open a booking modal)
    document.querySelectorAll('.book-now-modal').forEach(button => {
      button.addEventListener('click', () => {
        alert('Booking system would open here. In production, this would connect to your booking platform.');
      });
    });

    // Call Now Modal (simplified)
    document.querySelectorAll('.call-now-modal').forEach(button => {
      button.addEventListener('click', () => {
        alert('Select location:\n\nSan Francisco: +1 415-857-0150\nMountain View: +1 650-582-2848');
      });
    });

    // Testimonial Category Tabs
    document.querySelectorAll('.category-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.category-tab').forEach(t => {
          t.classList.remove('w--current');
        });
        tab.classList.add('w--current');
      });
    });

    // Parallax effect for hero section
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const scrolled = window.pageYOffset;
          const heroRight = document.querySelector('.hero-right');
          if (heroRight && scrolled < window.innerHeight) {
            heroRight.style.transform = `translateY(${scrolled * 0.3}px)`;
          }
          ticking = false;
        });
        ticking = true;
      }
    });
  </script>
