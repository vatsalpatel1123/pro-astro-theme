  <script>
    // Initialize Swiper for Gallery
    const gallerySwiper = new Swiper('#gallery-swiper', {
      slidesPerView: 1,
      spaceBetween: 30,
      loop: true,
      navigation: {
        nextEl: '#gallery-swiper .slider-button-right',
