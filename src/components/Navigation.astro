    <!-- Mobile Menu -->
    <div id="mobile-menu" class="mobile-menu md:hidden mt-4 space-y-4">
      <a href="/" class="block text-gray-700 hover:text-blue-600">Home</a>
      <a href="/about" class="block text-gray-700 hover:text-blue-600">About</a>

      <!-- Mobile Situations Dropdown -->
      <div class="dropdown" data-dropdown>
        <span class="text-gray-700 hover:text-blue-600 flex items-center cursor-pointer" data-dropdown-toggle>
