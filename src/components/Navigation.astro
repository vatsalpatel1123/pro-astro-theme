<style>
  .dropdown {
    position: relative;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    min-width: 200px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
    z-index: 100;
  }

  .dropdown-menu.block {
    display: block;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.75rem 1.5rem;
    color: #475569;
    transition: all 0.2s;
  }

  .dropdown-menu a:hover {
    background: #eff6ff;
    color: #2563eb;
  }

  /* Mobile menu */
  .mobile-menu {
    display: none;
  }

  .mobile-menu.show {
    display: block;
  }

  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
  }

  /* Optional: keep desktop hover */
  @media (min-width: 768px) {
    .dropdown:hover .dropdown-menu {
      display: block;
    }
  }
</style>

